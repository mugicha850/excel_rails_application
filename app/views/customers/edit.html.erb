<h1>編集</h1>
<%= form_for (@customer) do |f| %>
<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <% if @customer.errors.any? %>
        <%= @customer.errors.messages[:name][0] %>
    <% end %>
</p>
<p>
    <%= f.label :number %><br>
    <%= f.text_field :number %>
    <% if @customer.errors.any? %>
        <%= @customer.errors.messages[:number][0] %>
    <% end %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>

